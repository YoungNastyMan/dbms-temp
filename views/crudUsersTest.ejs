<%- include('header'); -%>
<%- include('logout'); -%>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body><h4>CRUD - USERS</h4>
<section class="insert">
    <h3>Insert User</h3>
    <form role="form" action="/users/register" method="POST" style="max-width: 300px">
        <div class="form-group">
            <input class="form-control" type="text" name="first_name" placeholder="Enter First Name" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="last_name" placeholder="Enter Last Name" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Enter Username" />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Password" />
        </div>
        <div class="form-group">
            <select name="usertype">
                <option value="buyer">buyer</option>
                <option value="seller">seller</option>
            </select>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="address" placeholder="Address" />
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="pincode" placeholder="Pincode" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="city" placeholder="City" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="state" placeholder="State" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="country" placeholder="Country" />
        </div>
        <button class="btn btn-default" type="submit">Submit</button>
    </form>
</section>
<section class="get">
    <h3>Get Users:</h3>
    <a href="/users/get-data">LOAD DATA</a>
    <div>   
     
     <% for(var i=0; i < user.length; i++) { %>
       <tr>
         <br> 
         <td><b>User <%= i+1 %></b></td>
         <br>
         <td>Username : </td>
         <td><%= user[i].username %></td>
         <br>
         <td>First Name : </td>
         <td><%= user[i].first_name %></td>
         <br>
         <td>Last Name : </td>
         <td><%= user[i].last_name %></td>
         <br>
         <td>User Type : </td>
         <td><%= user[i].usertype %></td>
         <br>
         <td>Address : </td>
         <td><%= user[i].address.address %></td>
         <br>
         <td>Pincode : </td>
         <td><%= user[i].address.pincode %></td>
         <br>
         <td>City : </td>
         <td><%= user[i].address.city %></td>
         <br>
         <td>State : </td>
         <td><%= user[i].address.state %></td>
         <br>
         <td>Country : </td>
         <td><%= user[i].address.country %></td>
         <br> 

       </tr>
    <% } %>

    </div>
</section>
<section class="update">
    <h3>Update User Information:</h3>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>
</section>
<section class="delete">
    <h3>Delete User By Username:</h3>
    <form action="/users/delete" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="Enter Username" />
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>
