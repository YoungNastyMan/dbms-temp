<%- include('header'); -%>
<%- include('logout'); -%>
<link rel="stylesheet" href="/stylesheets/style.css">
<h4>CRUD - BOOKS</h4>
<section class="insert">
    <h3>Add Book</h3>
    <form id="bookCreateBySeller">
        
        <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Enter Book Title" />
        </div>
        <div class="form-group">
            <input class="form-control" type = "text" name = "id"  placeholder="Enter Seller Username">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="author" placeholder="Enter Author Name" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="categories" placeholder="Enter Categories" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="publisher" placeholder="Enter Publisher" />
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="publishedYear" placeholder="Enter Published Year" />
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="price" placeholder="Enter Price" />
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="language" placeholder="Enter Language" />
        </div>
        <div class="form-group">
            <input class="form-control" type="number" name="pagecount" placeholder="Enter Page Count" />
        </div>
        <button class="btn btn-default" type="submit">Submit</button>
    </form>
</section>
<section class="get">
    <h3>View Cart</h3>
     <form name="viewCart" method="get" action="/cart/getUserCart">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Search books" id="textBox" name="searchText">
            <div class="input-group-btn">
                <button id="sub" class="btn btn-default" type="submit">Search
                </button>
            </div>
        </div>
    </form>
    <div>   
     <% if(cart) { %>
     <% for(var i=0; i < cart.length; i++) { %>
       <tr>
         <br> 
         <td><b>Book <%= i+1 %></b></td>
         <br>
         <td>Title : </td>
         <td><%= cart[i].title %></td>  
       </tr>
    <% } 
    }%>

    </div>
</section>
<section class="delete">
    <h3>Delete Book By Title:</h3>
    <form id="bookDeleteByTitle">
        <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Enter Title of Book" />
        </div>
        <button class="btn btn-default" type="submit">DELETE</button>
    </form>
</section>
<%- include('footer'); -%>
