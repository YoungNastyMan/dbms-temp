<form action="/books/write-reviews" method="post">
  <input type="hidden" name="bookId" value="<%= book._id %>" readonly/>
  <input type="hidden" name="userId" value="<%= user._id %>" readonly/>
  <input type="submit" name="<% book.id %>" value="Post reviews" />
  <br>
  <br>
</form>
<form id = "addToCart">
